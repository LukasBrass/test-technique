<html>
<head>
    <title> Task List</title>
    <meta charset="UTF-8">
</head>
<body>
<a role="button" href="{{ path('create') }}">Create a new task</a>
<br/><br/>
Choose your preferences : <br/>
{{ form_start(form) }}
{{ form_errors(form) }}
{{ form_widget(form) }}
{{ form_end(form) }}
<br/><br/>
<table>
    <thead>
    <tr>
        <td>ID</td>
        <td>Title</td>
        <td>Description</td>
        <td>Status</td>
        <td>Creation Date</td>
        <td>Modified Date</td>
    </tr>
    </thead>
    {% if taskList != null %}
    <tbody>
        {% for task in taskList %}
        <tr>
            <td>{{ task.id }}</td>
            <td>{{ task.title }}</td>
            <td>{{ task.description }}</td>
            <td>{{ task.status }}</td>
            <td>{{ task.creationDate|date('d/m/Y H:i:s') }}</td>
            {% if task.modifiedDate != null %}
            <td>{{ task.modifiedDate|date('d/m/Y H:i:s') }}</td>
            {% else %}
            <td></td>
            {% endif %}
            <td> <a role="button" href="{{ path('update', { 'id' : task.id }) }}">Update</a></td>
        </tr>
    {% endfor %}
    </tbody>
    {% endif %}
</table>
</body>
</html>